@model Movies_Project.Models.Schedule
@using Movies_Project.Models;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .schedule-container {
        max-width: 600px;
        margin: 0 auto; /* Căn giữa container theo chiều ngang */
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    textarea {
        vertical-align: top;
    }
</style>
<h1 style="text-align:center">Create Schedule </h1>


<hr />



<div class="schedule-container">
    <form asp-controller="Schedule" asp-action="Create" method="post">


        <div class="form-group">
            <label asp-for="Movie"></label>

            <select asp-for="MovieId">
                @foreach (Movie movie in ViewBag.movies)
                {
                    <option value="@movie.Id">@movie.Title</option>

                }
            </select>

        </div>

        <div class="form-group">
            <label asp-for="RoomId"></label>

            <select asp-for="RoomId">
                @foreach (Room room in ViewBag.rooms)
                {
                    <option value="@room.Id">@room.Title</option>

                }
            </select>

        </div>

        <div class="form-group">
            <label asp-for="TimeSlotId"></label>
            <select asp-for="TimeSlotId">
                @foreach (TimeSlot slot in ViewBag.timeSlots)
                {
                    <option value="@slot.Id">

                        @slot.StartTime - @slot.EndTime

                    </option>

                }
            </select>

        </div>

        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input type="date" asp-for="StartDate" />

        </div>

        <div class="form-group">
            <label asp-for="EndDate"></label>
            <input type="date" asp-for="EndDate" />

        </div>


        <div class="form-group">
            <label for="myTextarea" class="textarea-label">Input Your Note:</label>
            <textarea id="myTextarea" rows="4" cols="50" asp-for="Note"></textarea>

        </div>





        <button type="submit" class="btn btn-primary">Create Schedule</button>
    </form>
    <h5 style="color:red">@ViewBag.ErrorMessage</h5>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


